                                            "type": "string",
                                            "example": "User registered successfully"
                                        },
                                        "data": {
                                            "properties": {
                                                "name": {
                                                    "type": "string",
                                                    "example": "Fawad"
                                                },
                                                "email": {
                                                    "type": "string",
                                                    "format": "email",
                                                    "example": "fawad@example.com"
                                                },
                                                "updated_at": {
                                                    "type": "string",
                                                    "format": "date-time",
                                                    "example": "2024-11-05T16:41:33.000000Z"
                                                },
                                                "created_at": {
                                                    "type": "string",
                                                    "format": "date-time",
                                                    "example": "2024-11-05T16:41:33.000000Z"
                                                },
                                                "id": {
                                                    "type": "integer",
                                                    "example": 10
                                                },
                                                "token": {
                                                    "type": "string",
                                                    "example": "7|87eHdMh8jIC6XSYpKy4Nab22A4zf89l90Mz1xayveab76f3a"
